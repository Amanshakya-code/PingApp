<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".EditProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/circular_dotted_line"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="180dp"
            android:id="@+id/cardview"
            android:layout_height="180dp"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardCornerRadius="180dp"
            card_view:cardPreventCornerOverlap="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@color/action_bar_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/profilenametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/white"
                    android:textSize="100sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="T" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/changeImage"
            android:backgroundTint="@color/status_bar_color"
            android:src="@drawable/ic_baseline_camera_alt_24"
            app:layout_constraintBottom_toBottomOf="@+id/cardview"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/deleteImage"
            android:visibility="gone"
            android:src="@drawable/closeimage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageholder"
        android:id="@+id/firstrow"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/editname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name*"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="22sp"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/Editname"
        android:background="@color/text_box_color"
        android:backgroundTint="@color/text_box_color"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:hint="  eg: Aman"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/firstrow"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="55dp"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="@color/view_border"
        app:layout_constraintTop_toBottomOf="@id/Editname"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:id="@+id/secondrow"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_auto_awesome_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@color/black"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="10dp"
            android:textSize="22sp"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/editstatus"
        android:paddingLeft="10dp"
        android:maxLength="60"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:hint="  eg: Hey i am Using Ping"
        android:background="@color/text_box_color"
        android:backgroundTint="@color/text_box_color"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/secondrow"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="55dp"/>

    <com.google.android.material.button.MaterialButton
        app:layout_goneMarginTop="10dp"
        android:id="@+id/donebtn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:fontFamily="@font/roboto_medium"
        android:letterSpacing="0.08"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/action_bar_color"
        android:textSize="15sp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:cornerRadius="3dp"
        app:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/action_bar_color"
        app:strokeWidth="1.5dp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/loadblacksaved"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:cardBackgroundColor="@color/darkback"
        app:cardElevation="0dp" >

        <ProgressBar
            android:id="@+id/savedprogressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:indeterminateTint="@color/white"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>